---
const slug = Astro.params;

export interface Props {
  slug: string;
}

export async function getStaticPaths() {
  return [{ params: { slug: "404" } }];
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/logo2.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <title>Page Not Found | Badak Gunung</title>
  </head>
  <body>
    <div
      class="h-screen relative bg-cover bg-no-repeat bg-center"
      style="background-image : linear-gradient(180deg, rgba(1, 1, 1, 0.5) 0%, rgba(0, 0, 0, 0.4) 25%, rgba(255, 255, 255, 0) 100%), url('/images/404.jpg')"
    >
      <div class="flex flex-col items-center justify-center h-screen">
        <div
          class="bg-gray-300/75 flex flex-col items-center justify-center p-4 rounded-md"
        >
          <h1 class="text-4xl font-semibold mb-5">404 | Whooops!</h1>
          <p class="text-xl mb-5">Sepertinya anda tersesat kawan</p>
          <a
            class="px-4 py-2 bg-teal-900 text-white rounded-md hover:bg-teal-600"
