---
const { link, Img, title, price, durasi, jenistrip } = Astro.props;
export interface Props {
  link: string;
  Img: string;
  title: string;
  price: string;
  durasi: number;
  jenistrip: string;
}
---

<div class="w-full max-w-xl rounded overflow-hidden shadow-lg p-2">
  <a href={link}>
    <img
      src={Img}
      alt={Img + " image"}
      class="w-full object-cover object-center h-[10rem] sm:h-[14rem] hover:scale-110 hover:transition-all hover:duration-200 rounded"
    />
  </a>
  <div class="px-6 py-2">
    <div
      class="relative z-10 font-semibold text-base bg-teal-800 text-white px-2 py-0.5 mb-1"
    >
      {"Rp. " + price}
    </div>
    <a href={link} class="text-gray-700 text-xl font-semibold">
      {title}
    </a>
  </div>
  <div class="flex justify-between px-4 py-2">
    <div class="flex items-center gap-1">
      <div
        class="bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-slate-500"
      >
        <p><i class="bi bi-clock"></i>&nbsp;{durasi + " day"}</p>
      </div>
      <div
        class="bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-slate-500"
      >
        <p>{jenistrip + " Trip"}</p>
      </div>
    </div>
    <a
      href={link}
      class="flex bg-teal-900 text-white hover:bg-teal-700 hover:scale-110 hover:transform-all hover:duration-300 px-4 py-2 rounded-lg items-center"
      >Details</a
    >
  </div>
</div>
