---
const { judul, bgImg } = Astro.props;
export interface Props {
  judul: string;
  bgImg: string;
}
---

<section class=`h-screen bg-cover bg-no-repeat bg-center ${bgImg}`>
  <div
    class="absolute z-[5] h-screen w-full"
    style="background-image: linear-gradient(180deg, rgba(1, 1, 1, 0.5) 0%, rgba(0, 0, 0, 0.4) 25%, rgba(255, 255, 255, 0) 100%);"
  >
  </div>
  <div class="relative z-10 left-[10%] top-[30%] w-fit text-stone-200">
    <p class="font-bold text-2xl mb-2">
      <span class="typed" data-typed-items={judul}></span>
    </p>
    <p class="font-semibold text-lg mb-3">by Badak Gunung</p>
  </div>
</section>

<script>
  import Typed from "typed.js";
  const typed = document.querySelector(".typed");
  if (typed) {
    let typedStrings = typed.getAttribute("data-typed-items");
    // typedStrings = typedStrings.split(",");
    new Typed(".typed", {
      strings: typedStrings.split("dan"),
      loop: true,
      typeSpeed: 50,
      backSpeed: 50,
      backDelay: 1500,
    });
  }
</script>
